<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/padding_m"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/race_history_date_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/race_date_title_text"
            />

        <TextView
            android:id="@+id/race_history_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="17.07.2025, 15:47:56"
            android:layout_marginTop="@dimen/padding_s"
            app:layout_constraintTop_toBottomOf="@id/race_history_date_title"
            app:layout_constraintStart_toStartOf="@id/race_history_date_title"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/race_history_time_title"
            app:layout_constraintStart_toStartOf="@id/race_history_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/race_time_title_text"
            app:layout_constraintTop_toBottomOf="@id/race_history_date"
            android:layout_marginTop="@dimen/padding_s"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/race_history_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_s"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="0 часов 17 минут 28 секунд 346 миллисекунд"
            app:layout_constraintTop_toBottomOf="@id/race_history_time_title"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_race_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_button_text"
            app:layout_constraintTop_toBottomOf="@id/race_history_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/padding_m"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>